body,p,a{
  font-family: "OpenSansRegular" !important; 
}
.heading{
  font-family: "RobotoLight" !important;  
}
p(){
	color p-color
}
h(){
  font-size $text-font-size
  color lighten($dark, 10)
  margin: ($base-margin) 0 ($base-margin/2) 0
}
p{
	p()
}

a(){
	color $palette-alpha-link
}
a{
	a()
}
body, p,a, span, div, input{
  font-size: $text-font-size 
