ease-in-out-display(){
  -webkit-transition: display 0.2s ease-in-out;
  -moz-transition: display 0.2s ease-in-out;
  -o-transition: display 0.2s ease-in-out;
  transition: display 0.2s ease-in-out;
}
ease-in-out-all(n = 0.2s){
  -webkit-transition: all n ease-in-out;
  -moz-transition: all n ease-in-out;
  -o-transition: all n ease-in-out;
  transition: all n ease-in-out;
}
ease-in-out-opacity(){
  -webkit-transition: opacity 0.2s ease-in-out;
  -moz-transition: opacity 0.2s ease-in-out;
  -o-transition: opacity 0.2s ease-in-out;
  transition: opacity 0.2s ease-in-out;
}
list-animate(){
	.ng-enter, 
	.ng-leave { 
	    -webkit-transition: 400ms cubic-bezier(0.785, 0.135, 0.150, 0.860) all;
	    -moz-transition: 400ms cubic-bezier(0.785, 0.135, 0.150, 0.860) all;
	    -ms-transition: 400ms cubic-bezier(0.785, 0.135, 0.150, 0.860) all;
	    -o-transition: 400ms cubic-bezier(0.785, 0.135, 0.150, 0.860) all;
	    transition: 400ms cubic-bezier(0.785, 0.135, 0.150, 0.860) all;
	    position: relative;
	    display: block;
	} 
	 
	.ng-leave.ng-leave-active,
	.ng-enter {
	    -webkit-transform: scaleY(0);
	    -moz-transform: scaleY(0);
	    -ms-transform: scaleY(0);
	    -o-transform: scaleY(0);
	    transform: scaleY(0);
	    height: 0px;
	    opacity: 0;
	}
	 
	.ng-enter.ng-enter-active,
	.ng-leave {
	    -webkit-transform: scaleY(1);
	    -moz-transform: scaleY(1);
	    -ms-transform: scaleY(1);
	    -o-transform: scaleY(1);
	    transform: scaleY(1);
	    height: 30px;
	    opacity: 1;
	}
}
fade-in(dur = 0.6s){
	-webkit-animation: fadein dur; /* Safari, Chrome and Opera > 12.1 */
       -moz-animation: fadein dur; /* Firefox < 16 */
        -ms-animation: fadein dur; /* Internet Explorer */
         -o-animation: fadein dur; /* Opera < 12.1 */
            animation: fadein dur;
}
fade-in-keyframe(){
	@keyframes fadein {
	    from { opacity: 0; }
	    to   { opacity: 1; }
	}

	/* Firefox < 16 */
	@-moz-keyframes fadein {
	    from { opacity: 0; }
	    to   { opacity: 1; }
	}

	/* Safari, Chrome and Opera > 12.1 */
	@-webkit-keyframes fadein {
	    from { opacity: 0; }
	    to   { opacity: 1; }
	}

	/* Internet Explorer */
	@-ms-keyframes fadein {
	    from { opacity: 0; }
	    to   { opacity: 1; }
	}

	/* Opera < 12.1 */
	@-o-keyframes fadein {
	    from { opacity: 0; }
	    to   { opacity: 1; }
	}
}
fade-in-keyframe(); 
page-animate(){
	.ng-enter,
	.ng-leave,
	.ng-move {
	  -webkit-transition:0.5s linear all;
	  transition:0.5s linear all;
	}

	/* ending enter and move styling
	   (this is what the element will animate from */
	.ng-enter,
	.ng-move { opacity:0; }

	/* ending enter and move styling
	   (this is what the element will animate towards */
	.ng-enter.ng-enter-active,
	.ng-move.ng-move-active { opacity:1; }

	/* starting leave animation */
	.ng-leave { opacity:1; }

	/* ending leave animation */
	.ng-leave.ng-leave-active { opacity:0; }	
}
