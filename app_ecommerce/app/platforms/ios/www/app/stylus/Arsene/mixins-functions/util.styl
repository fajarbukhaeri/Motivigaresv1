full-width-element(){
	display:block; 
	width: 100%; 
}
border-radius(n){
	-webkit-border-radius n 
	border-radius n 
	-moz-border-radius n 
	border-top-left-radius: n;
	border-top-right-radius: n;
	border-bottom-left-radius: n;
	border-bottom-right-radius: n;
}
limit-line(n){
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	line-height: 18px;
	max-height: 18px;
	-webkit-line-clamp: n;
	-webkit-box-orient: vertical;
}
