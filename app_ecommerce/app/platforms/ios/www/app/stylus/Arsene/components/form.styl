form-dark(){
	margin: 60px auto 0;
	opacity: 0.8; 
	width: $container-width; 
	text-align: center;
	
	input[type="password"], input[type="email"], input[type="phone"], input[type="text"]{
		@extend .text-input--underbar
		full-width-element()
	  	outline: none;
	  	padding-top: $base-padding * 2;
	  	padding-bottom: $base-padding * 2;
	  	color: $light !important; 
	  	border-bottom:1px solid rgba($light, 0.30); 
	  	margin: $base-margin auto !important
	}
	button, ons-button{
		button-default-semi-transparent()
		margin-top:$base-margin * 2
	}
	p{
		color $light
		margin-top: $base-margin * 3
	}
	img{
		width:82%
		margin-bottom: $base-margin * 3
	}
}
.form-dark{
	form-dark(); 
}